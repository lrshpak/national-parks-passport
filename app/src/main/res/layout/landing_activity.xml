<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="@string/searchState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchForState"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/stateText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/stateText"
            android:hint="@string/stateHint"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="@string/landingText"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/stateText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>