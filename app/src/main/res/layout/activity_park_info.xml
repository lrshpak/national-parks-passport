<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


            <TextView
                    android:text="@string/parkName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/parkName"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
            <TextView
                    android:text="@string/parkDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_dark"
                    android:id="@+id/parkDes"
                    android:textSize="18sp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/fullParkName" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Park Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullParkName"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/parkName" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Park Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parkDescription"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/parkDes" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="@string/weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/weatherButton"
            android:background="@android:color/holo_green_dark"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>